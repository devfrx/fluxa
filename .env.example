# ============================================================================
# Fluxa AI Agent - Configurazione
# ============================================================================
# Copia questo file in `.env` e personalizza i valori secondo le tue esigenze

# --- Generale ---
DEBUG=false

# --- LMStudio ---
FLUXA_LMSTUDIO__BASE_URL=http://localhost:1234/v1 # URL base di LMStudio
FLUXA_LMSTUDIO__TIMEOUT=120 # Timeout in secondi per le richieste al modello
FLUXA_LMSTUDIO__MODEL_NAME= # Nome del modello da utilizzare in LMStudio
FLUXA_LMSTUDIO__MAX_RETRIES=3 # Numero massimo di tentativi per le richieste al modello
FLUXA_LMSTUDIO__TEMPERATURE=0.7 # Controlla la creatività delle risposte
FLUXA_LMSTUDIO__MAX_TOKENS=6000 # Numero massimo di token per la risposta
FLUXA_LMSTUDIO__TREAM=true # Abilita lo streaming delle risposte

# --- Configurazione del Database ---
FLUXA_DB__PATH=true # Percorso del database SQLite
FLUXA_DB__ENABLE_WAL=true # Abilita Write-Ahead Logging per migliori prestazioni
FLUXA_DB__TIMEOUT=30 # Timeout in secondi per le operazioni sul database
FLUXA_DB__MAX_CONNECTIONS=10 # Numero massimo di connessioni al database

# --- Visioning ---
FLUXA_VISION__ENABLE=true # Abilita le funzionalità di visione artificiale
FLUXA_VISION__MODEL_NAME= # Nome del modello di visione artificiale da utilizzare
FLUXA_VISION__MAX_IMAGE_SIZE=3 # Numero massimo di tentativi per le operazioni di visione artificiale

# --- Tools ---
FLUXA_TOOLS__ENABLE=true # Abilita le funzionalità di tools
FLUXA_TOOLS__MAX_ITERATIONS=3 # Numero massimo di iterazioni per i tools
FLUXA_TOOLS__MODEL_NAME= # Nome del modello da utilizzare per i tools
# FLUXA_TOOLS__ALLOWED_TOOLS=file_operations,calculations # Elenco separato da virgole degli strumenti consentiti

# --- Logging ---
FLUXA_LOGGING__LEVEL=INFO # Livello di logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
FLUXA_LOGGING__FILE_PATH=logs/fluxa_agent.log # Percorso del file di log
FLUXA_LOGGING__ROTATION=10 MB # Dimensione massima del file di log prima della rotazione
FLUXA_LOGGING__RETENTION=1 month # Periodo di conservazione dei file di log ruotati

